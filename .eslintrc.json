{
  "extends": "next/core-web-vitals",
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "jsx-quotes": "error",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": "error",
    "react/jsx-no-useless-fragment": [
      "error",
      {
        "allowExpressions": true
      }
    ],
    "react/self-closing-comp": "error"
  }
}
